{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "dotnet build (Get-Item \"${workspaceFolder}/src/*.csproj\").FullName --configuration Debug",
			"args": [],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build Release",
			"type": "shell",
			"command": "dotnet build (Get-Item \"${workspaceFolder}/src/*.csproj\").FullName --configuration Release",
			"args": [],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "dotnet clean (Get-Item \"${workspaceFolder}/src/*.csproj\").FullName",
			"args": [],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Rebuild Debug",
			"type": "shell",
			"command": "dotnet build (Get-Item \"${workspaceFolder}/src/*.csproj\").FullName --configuration Debug --no-incremental",
			"args": [],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"dependsOn": "Clean"
		},
		{
			"label": "Build and Install Mod",
			"type": "shell",
			"command": "dotnet build (Get-Item \"${workspaceFolder}/src/*.csproj\").FullName --configuration Release",
			"args": [],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		}
	]
}